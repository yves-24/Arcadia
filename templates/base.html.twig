<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Arcadia | {% endblock %}Arcadia</title>

    <!-- Google Material Design Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet"/>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>

    <!-- Owl-carousel CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/owl.carousel.min.css') }}"/>

    <!-- Boostrap CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.css') }}"/>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}"/>
    {#    {% block stylesheets %} #}
    {#            {{ encore_entry_link_tags('app') }} #}
    {#    {% endblock %} #}

    {#    {% block javascripts %} #}
    {#            {{ encore_entry_script_tags('app') }} #}
    {#        {% block importmap %}{{ importmap('app') }}{% endblock %} #}
    {#    {% endblock %} #}
</head>
<body>
    <header class="a-header" id="a-header">
        <nav class="navbar navbar-expand-lg bg-rich-black">
            <div class="container">
                <a class="navbar-brand" href="{{ path('arcadia_home') }}"><span>a</span>rcadia</a>
                <button
                        class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav gap-4">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="{{ path('arcadia_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('arcadia_habitats') }}">Tous les Habitats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('arcadia_animals') }}">Tous les Animaux</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('arcadia_contact') }}">Contact</a>
                        </li>
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('arcadia_login') }}">Connexion</a>
                            </li>
                        {% else %}
                            {% if is_granted("ROLE_USER") %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('arcadia_admin') }}">Tableau de bord</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('arcadia_logout') }}">Déconnexion</a>
                                </li>
                            {% endif %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}

    <footer class="footer py-5 bg-rich-black" id="footer">
        <div class="container">
            <div class="row justify-content-between">
                <h1 class="text-center text-pear fw-bold roboto-slab">ECF développeur Web et Web Mobile 2024</h1>
            </div>
        </div>
    </footer>

    <!-- jQuery  -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"
            integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer"
    ></script>

    <!-- Owl carousel JS -->
    <script src="{{ asset('assets/js/owl.carousel.min.js') }}"></script>

    <!-- Bootstrap JS -->
    <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom JS -->
    <script src="{{ asset('assets/js/app.js') }}"></script>
</body>
</html>
